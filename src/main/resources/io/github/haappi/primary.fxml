<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<View xmlns:fx="http://javafx.com/fxml/1" fx:id="primary" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0" stylesheets="@primary.css, @style.css"
      xmlns="http://javafx.com/javafx/18" fx:controller="io.github.haappi.views.PrimaryPresenter">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="label" text="Productivity App" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <TextField fx:id="email" promptText="Email"/>
                <PasswordField fx:id="password" promptText="Password"/>
                <HBox spacing="10.0">
                    <Button mnemonicParsing="false" onAction="#buttonClick" text="Login"/>
                    <Button mnemonicParsing="false" onAction="#buttonClick" text="Signup"/>
                </HBox>
            </children>
        </VBox>
    </center>
</View>