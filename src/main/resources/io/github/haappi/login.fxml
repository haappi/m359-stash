<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<View xmlns:fx="http://javafx.com/fxml/1" fx:id="primary" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0" stylesheets="@primary.css"
      xmlns="http://javafx.com/javafx/18" fx:controller="io.github.haappi.views.LoginHandler">
    <center>
        <VBox fx:id="vbox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="label" text="Login"/>
                <TextField fx:id="email" promptText="Email"/>
                <PasswordField fx:id="password" prefHeight="26.0" prefWidth="201.0" promptText="Password"/>
                <Button mnemonicParsing="false" onAction="#login" text="Login">
                    <graphic>
                        <Icon content="LANGUAGE"/>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#signup" text="Signup">
                    <graphic>
                        <Icon content="LANGUAGE"/>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </center>
</View>
