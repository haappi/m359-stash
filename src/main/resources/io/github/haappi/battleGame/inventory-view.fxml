<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.haappi.battleGame.InventoryView">
    <children>
        <ListView fx:id="inventoryItems" layoutX="69.0" layoutY="55.0" onMouseClicked="#onItemHover" prefHeight="200.0" prefWidth="200.0" />
        <MenuButton layoutX="339.0" layoutY="99.0" mnemonicParsing="false" onAction="#sortButton" text="Sort">
            <items>
                <MenuItem mnemonicParsing="false" text="Quantity" />
                <MenuItem mnemonicParsing="false" text="Price" />
            </items>
        </MenuButton>
      <Text fx:id="itemInformation" layoutX="321.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Item Information" />
      <Button layoutX="468.0" layoutY="30.0" mnemonicParsing="false" onAction="#goBackToOldMenu" text="Go Back" />
    </children>
</AnchorPane>
