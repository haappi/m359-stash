<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="537.0" prefWidth="723.0" xmlns="http://javafx.com/javafx/18"
            fx:controller="io.github.haappi.battleGame.BattleView">
    <children>
        <TabPane layoutX="436.0" layoutY="323.0" prefHeight="200.0" prefWidth="235.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Battle"/>
                <Tab onSelectionChanged="#inventoryItemsRequested" text="View Inventory Items">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="invItems" layoutX="7.0" layoutY="3.0" prefHeight="166.0"
                                          prefWidth="153.0"/>
                                <Button layoutX="174.0" layoutY="14.0" mnemonicParsing="false" onAction="#useInvItem"
                                        text="USE"/>
                                <Button layoutX="174.0" layoutY="50.0" mnemonicParsing="false" text="Equip"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <Button fx:id="attack" layoutX="238.0" layoutY="114.0" mnemonicParsing="false" onAction="#attack" text="Attack">
            <tooltip>
                <Tooltip text="Attacks the opponent with your chosen weapon, or fist."/>
            </tooltip>
        </Button>
        <Button fx:id="useItem" layoutX="238.0" layoutY="151.0" mnemonicParsing="false" onAction="#useItem"
                text="Use Item"/>
        <Text fx:id="opponentStats" layoutX="465.0" layoutY="134.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Opponent Stats"/>
        <Button fx:id="upShields" layoutX="238.0" layoutY="197.0" mnemonicParsing="false" onAction="#defend"
                text="Increase Shields">
            <tooltip>
                <Tooltip text="Increases your defenses"/>
            </tooltip>
        </Button>
        <Button fx:id="flee" layoutX="238.0" layoutY="232.0" mnemonicParsing="false" onAction="#zoomZoomAway"
                text="Flee">
            <tooltip>
                <Tooltip text="Attempts to run away if your fatigue level is less than the monsters."/>
            </tooltip>
        </Button>
        <Text fx:id="yourStats" layoutX="106.0" layoutY="126.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Your stats"/>
        <Text fx:id="battleLengthTime" layoutX="430.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Battle has been going on for:"/>
        <Text fx:id="recentActions" layoutX="276.0" layoutY="308.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Recent Actions"/>
        <Button fx:id="mainMenu" layoutX="236.0" layoutY="114.0" mnemonicParsing="false" onAction="#mainMenu"
                text="Return to Main Menu" visible="false">
            <tooltip>
                <Tooltip text="Attempts to run away if your fatigue level is less than the monsters."/>
            </tooltip>
        </Button>
    </children>
</AnchorPane>
